{
  "name": "@bhavberi/react-native-user-avatar",
  "version": "2.0.3",
  "description": "React Native component for a user avatar with fallback to colored initials",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/commonjs/types.d.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "keywords": [
    "react-native",
    "react-native-component",
    "avatar",
    "initials"
  ],
  "author": "Bhav Beri <bhavberi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhavberi/react-native-user-avatar.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext=.js,.ts .",
    "lint-fix": "eslint --ext=.js,.ts . --fix",
    "prepare": "bob build",
    "release": "release-it",
    "example": "rm -rf node_modules && yarn --cwd Example && npm run --prefix Example start",
    "bootstrap": "yarn && yarn prepare",
    "clean": "rm -rf node_modules coverage .env lib Example/node_modules Example/.expo"
  },
  "dependencies": {
    "abortcontroller-polyfill": "^1.7.5",
    "initials": "^3.1.2",
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": ">=0.72.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-private-methods": "^7.24.7",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/create-cache-key-function": "^29.7.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-native": "^0.73.0",
    "babel-jest": "29.7.0",
    "commitlint": "^19.4.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "^18.3.1",
    "react-native": ">=0.75.3",
    "react-native-builder-bob": "^0.29.1",
    "react-test-renderer": "18.3.1",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "resolutions": {
    "react-native/@jest/create-cache-key-function": "^29.7.0"
  },
  "jest": {
    "preset": "react-native",
    "automock": false,
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [],
    "testMatch": [
      "**/**/*.test.js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/",
      "<rootDir>/lib/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript && yarn test"
    }
  },
  "source": "./src/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/types.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/types.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "esm": true
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "engines": {
    "node": ">=18"
  }
}
